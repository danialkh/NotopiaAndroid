<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.ortiz.touchview.TouchImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgDisplay"
        android:scaleType="fitCenter"
        src="@tools:sample/backgrounds/scenic" />



    <ImageView
        android:id="@+id/IVBackDeletePic"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:src="@drawable/vc_back_number_category"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <ImageView
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete"
        app:tint="@color/colorGray"
        app:layout_constraintTop_toTopOf="@id/IVBackDeletePic"
        app:layout_constraintBottom_toBottomOf="@id/IVBackDeletePic"
        app:layout_constraintStart_toStartOf="@id/IVBackDeletePic"
        app:layout_constraintEnd_toEndOf="@id/IVBackDeletePic"
        />





</androidx.constraintlayout.widget.ConstraintLayout>