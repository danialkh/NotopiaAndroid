<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/LLEditCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@drawable/vc_back_edit_category"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layoutDirection="rtl"

        >


        <TextView
            android:id="@+id/TagTextEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="دسته 1"
            android:fontFamily="@font/ir_sans"
            android:textSize="14dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/TagBtnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:contentPadding="5dp"
            android:layout_gravity="center"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="8dp"
            >
            <ImageView
                android:id="@+id/TVTagBtnDelete"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                app:tint="@color/colorGray"
                android:src="@drawable/ic_delete"/>



        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/TagBtnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:contentPadding="5dp"
            android:layout_gravity="center"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="8dp"
            >
            <ImageView
                android:id="@+id/IVTagBtnEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_icon_pencil"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/colorzardbtn"
        app:layout_constraintTop_toBottomOf="@id/LLEditCategory"
        app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>